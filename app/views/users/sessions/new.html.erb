<h1 class="cp_h1title">従業員専用ログイン画面</h1>
<br><br>
<!--アラートメッセージ-->
<% if notice %>
  <div class="flash">
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="flash">
    <%= alert %>
  </div>
<% end %>
<!--ログインフォーム-->
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <ul>
    <li>
      <div class="field">
        <h2>
          <%= f.label :email %><%= "を入力してください" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </h2>
      </div>
      <br>
      <div class="field">
        <h2>
          <%= f.label :password %><%= "を入力してください" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </h2>
      </div>
      <br>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "ログイン" , class: 'login-btn'%>
      </div>
      <br>
      <%= render "users/shared/links" %>
    </li>
  </ul>
<% end %>
<%= link_to("README","/home/readme") %>
