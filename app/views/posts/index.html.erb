<!--flashメッセージ-->
<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<h1 class="cp_h1title">お問い合わせ一覧</h1>
<br><br>
<%= link_to("管理者画面トップへ","/home/top") %>
<% @posts.each do |post| %>
  <ul>
    <li>
      <%= post.created_at.strftime('%Y/%m/%d') %>
      <%= link_to(post.summary, "/posts/#{post.id}") %>
      <% if post.done_flag == true%>
        <b><font color="#ff0000">解決済み</font></b>
      <%end%>
    </li>
  </ul>
<% end %>
